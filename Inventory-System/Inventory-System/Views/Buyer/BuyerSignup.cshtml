@model Inventory_System.Models.Buyer
@{
    ViewBag.Title = "BuyerUp";
    Layout = "~/Views/Shared/authLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/images/favicon.png" type="image/x-icon" />
    <title>Facebook Signup</title>
    <link href="~/Style/signup.css" rel="stylesheet" />
    <style>
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <section class="">
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                    @using (Html.BeginForm("BuyerSignup", "buyer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <form class="login">

                                            <div class="d-flex flex-row align-items-center mb-4">

                                                <div class="form-outline flex-fill mb-0">
                                                    @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { placeholder = "firstname", @class = "form-control", required = true } })
                                                    <label class="form-label" for="form3Example1c">First Name</label>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center mb-4">

                                                <div class="form-outline flex-fill mb-0">
                                                    @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { placeholder = "lastname", @class = "form-control", required = true } })
                                                    <label class="form-label" for="form3Example1c">Last Name</label>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <div class="form-outline flex-fill mb-0">
                                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { placeholder = "email address", @class = "form-control", required = true } })
                                                    <label class="form-label" for="form3Example3c"> Email</label>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <div class="form-outline flex-fill mb-0">
                                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { placeholder = "password", @class = "form-control", required = true } })
                                                    <label class="form-label" for="form3Example4c">Password</label>
                                                </div>
                                            </div>
                                           
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                @Html.TextBoxFor(model => model.profilePicture, new { type = "file", htmlAttributes = new { @class = "form-control" } })
                                            </div>


                                            <div class="d-flex  mx-4 mb-3 mb-lg-4">
                                                <button type="submit" class="btn w-75 btn-primary btn-lg">Register</button>
                                            </div>
                                        </form>
                                    }
                                    <div class="d-flex  pb-4">
                                        <p class="mb-0 me-2 text-center ml-5">Do you have an account?</p>
                                        <a class="mx-2 text-center" href="/Buyer/BuyerLogin">Login</a>
                                    </div>


                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @if (!string.IsNullOrEmpty(ViewBag.AlertMessage))
    {
        <script>
        alert("@Html.Raw(ViewBag.AlertMessage)");
        </script>
    }
</body>
</html>
