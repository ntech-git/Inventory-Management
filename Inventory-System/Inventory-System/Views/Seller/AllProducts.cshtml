@model IEnumerable<Inventory_System.Models.Products>
@{
    ViewBag.Title = "AllProducts";
    Layout = "~/Views/Shared/authLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/images/favicon.png" type="image/x-icon" />
    <title>Facebook Login</title>
    <link href="~/Content/style/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@500&family=Lobster&display=swap"
          rel="stylesheet">

</head>
<style>
    .logo-text-container {
        display: flex;
        align-items: center;
    }

    .logo {
        margin-right: 10px; /* Adjust as needed */
        height: 80px;
        width: 80px;
    }

    .profile {
        margin-right: 10px; /* Adjust as needed */
        height: 50px;
        width: 50px;
    }
</style>
<body>
    <section class="gradient-form p-0">
        <div class="container">
            <div class="row d-flex justify-content-between align-items-center" style="margin-top: -44px">
                <div class="col-xl-8 d-flex align-items-center">
                    <img src="~/Content/images/logo.png" alt="Logo" class="logo">
                    <h3><span style="font-size:35px">Welcome</span> to online inventory system</h3>
                </div>
                <div class="col-xl-4 d-flex align-items-center justify-content-end">
                    <div class="logo-text-container">
                        <img src="~/Content/images/user.png" alt="logo" class="profile">
                        <h4>@Session["firstName"] @Session["lastName"]</h4>
                    </div>
                </div>
            </div>

            <hr />
            <div class="row " style="margin-top:60px">
                <div class="col-md-12">
                    <div class="card py-5 gradient-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-4">
                                <div>
                                    @using (Html.BeginForm("AllProducts", "seller", FormMethod.Post))
                                    {
                                        <div class="d-flex">
                                           
                                            @Html.TextBox("category", null, new { @class = "form-control", placeholder = "search by category" })


                                            <input type="submit" style="color-rendering" class="mx-2" name="btn" value="Search" />
                                            <br />
                                        </div>
                                    }
                                </div>
                                <a class="mx-2" href="/Seller/AddProduct"> <button type="button" class="btn btn-primary">Add Product</button></a>
                            </div>
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.category)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.price)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.image)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr style="background-color: @(item.pid % 2 == 0 ? "#f2f2f2" : "white")">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.category)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.price)
                                        </td>
                                        <td>
                                            <img style="height:50px; width:auto" src="@Url.Content(item.file)" alt="Image" />
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "EditProduct", new { pid = item.pid }) |
                                            @Html.ActionLink("Delete", "DeleteProduct", new { pid = item.pid })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

